<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/glowi"
        android:layout_width="222dp"
        android:layout_height="208dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/glowi" />

    <ImageView
        android:id="@+id/AnalysisIcon"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:background="@drawable/round_image_with_shadow"
        android:clipToOutline="true"
        android:elevation="8dp"
        android:padding="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/glowi"
        app:layout_constraintEnd_toEndOf="@+id/glowi"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/glowi"
        app:layout_constraintTop_toTopOf="@+id/glowi"
        app:layout_constraintVertical_bias="0.192" />

    <TextView
        android:id="@+id/Currentbalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#50F2F1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/TotalBalance"
        app:layout_constraintEnd_toEndOf="@+id/glowi"
        app:layout_constraintStart_toStartOf="@+id/glowi"
        app:layout_constraintTop_toBottomOf="@+id/AnalysisIcon"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/TotalBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#50F2F1"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/glowi"
        app:layout_constraintEnd_toEndOf="@+id/glowi"
        app:layout_constraintStart_toStartOf="@+id/glowi" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTransactions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/glowi" />


</androidx.constraintlayout.widget.ConstraintLayout>